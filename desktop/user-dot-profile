# Select preferred backend for Electron apps. See:
# https://github.com/electron/electron/blob/main/docs/api/environment-variables.md#electron_ozone_platform_hint-linux
export ELECTRON_OZONE_PLATFORM_HINT=auto
# Use QT platform abstraction and qtct to handle themes for QT apps
export QT_QPA_PLATFORMTHEME=qt5ct
# Enable Java apps to run in non-parenting WM. Fixes app starts as blank with no menus or anything
# https://github.com/swaywm/sway/wiki#issues-with-java-applications
export _JAVA_AWT_WM_NONREPARENTING=1
# Where to save screenshots when using grimshot and others
export XDG_SCREENSHOTS_DIR="/home/brendan/screenshots"
# Force GPG / GPG agent to use CLI/tty tools (eg: for pinentry)
export GPG_TTY=$(tty)
# Various local paths to append
export PATH="$PATH:/home/brendan/.cargo/bin"
export PATH="$PATH:/opt/bin"
